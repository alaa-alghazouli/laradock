server {
    listen 80;
    listen [::]:80;

    # For https
    # listen 443 ssl;
    # listen [::]:443 ssl;
    # Self certificate #
    # ssl_certificate /etc/nginx/ssl/confluence-domain.com.crt;
    # ssl_certificate_key /etc/nginx/ssl/confluence-domain.com.key;
    # Certbot certificate #
    # ssl_certificate /etc/letsencrypt/live/confluence-domain.com/fullchain.pem;
    # ssl_certificate_key /etc/letsencrypt/live/confluence-domain.com/privkey.pem;

    server_name confluence-domain.com www.confluence-domain.com;

    location / {
            client_max_body_size 100m;
            proxy_set_header X-Forwarded-Host $host;
            proxy_set_header X-Forwarded-Server $host;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_pass http://confluence-domain.com:8090/;
    }

    location /synchrony {
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Server $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_pass http://confluence-domain.com:8090/synchrony-proxy;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
    }

    location /.well-known/acme-challenge/ {
        root /var/www/letsencrypt/;
        log_not_found off;
    }

    error_log /var/log/nginx/confluence_error.log;
    access_log /var/log/nginx/confluence_access.log;
}
